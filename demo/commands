docker run --rm -it \
    --network host \
    -v $(pwd)/map/sample-map-planning:/root/autoware_map \
    -v $(pwd)/cyclonedds.xml:/autoware/cyclonedds.xml \
    -v $(pwd)/launch/control.launch.xml:/opt/autoware/share/tier4_control_launch/launch/control.launch.xml \
    -e RMW_IMPLEMENTATION=rmw_cyclonedds_cpp \
    -e ROS_DOMAIN_ID=1 \
    -e CYCLONEDDS_URI=file:///autoware/cyclonedds.xml \
    ghcr.io/autowarefoundation/autoware:universe-20250207 \
    ros2 launch autoware_launch planning_simulator.launch.xml \
    map_path:=/root/autoware_map \
    vehicle_model:=sample_vehicle \
    sensor_model:=sample_sensor_kit \
    rviz:=false


docker run --rm -it \
    --network host \
    -v $(pwd)/cyclonedds.xml:/autoware/cyclonedds.xml \
    -v $(pwd)/bridge/bridge-config.yaml:/autoware/bridge-config.yaml \
    -e RMW_IMPLEMENTATION=rmw_cyclonedds_cpp \
    -e ROS_DOMAIN_ID=1 \
    -e CYCLONEDDS_URI=file:///autoware/cyclonedds.xml \
    safety-island-bridge:latest \
    ros2 run domain_bridge domain_bridge --wait-for-publisher false /autoware/bridge-config.yaml


docker run --rm -it \
  --network host \
  -v $(pwd)/cyclonedds.xml:/autoware/cyclonedds.xml \
  -e RMW_IMPLEMENTATION=rmw_cyclonedds_cpp \
  -e ROS_DOMAIN_ID=1 \
  -e CYCLONEDDS_URI=file:///autoware/cyclonedds.xml \
  -p 6080:6080 \
  safety-island-visualizer:latest